<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.motelmanagement">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MotelManagement">
        <activity android:name=".Action.AddNewRoom"
            android:parentActivityName=".View.MainActivity">
        </activity>
        <activity android:name=".View.NotificationActivity" />
        <activity android:name=".View.UserActivity" />
        <activity android:name=".View.SignUpActivity" />
        <activity android:name=".View.LoginActivity" />
        <activity android:name=".View.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".View.MainActivity" />
    </application>

</manifest>